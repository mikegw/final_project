  <h1>Create a new List</h1>

  <form class="edit-list-form">
    <input type="text" name="list[title]" placeholder="List name" value="<%= list.escape("title") %>">

    <section class="list-radio-container group">

      <div class="radio-container">
        <input type="radio" name="list[access]" id="list-access-public" value="PUBLIC" <% if(list.escape("access") === "PUBLIC") { %> checked="checked" <%} %> >
        <label for="list-access-public">PUBLIC</label>
      </div>

      <div class="radio-container">
        <input type="radio" name="list[access]" id="list-access-friends" value="FRIENDS" <% if(list.escape("access") === "FRIENDS") { %> checked="checked" <%} %> >
        <label for="list-access-friends">FRIENDS ONLY</label>
      </div>

      <div class="radio-container">
        <input type="radio" name="list[access]" id="list-access-private" value="PRIVATE" <% if(list.escape("access") === "PRIVATE") { %> checked="checked" <%} %> >
        <label for="list-access-private">PRIVATE</label>
      </div>

    </section>

    <figure class="list-modal-searchbar-container">
    </figure>

    <h3> Collaborators</h3>

    <figure class="list-modal-collaborators-container">
    </figure>

    <button id=#save-button>Save</button>
  </form>

</div>

<div class="modal-screen js-hide-modal" id="list-modal-screen"></div>
